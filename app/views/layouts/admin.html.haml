!!!
%html
  %head
    %title
      = h(yield(:title) || 'Untitled')
    -#= stylesheet_link_tag('admin')
    = javascript_include_tag :defaults
    = active_scaffold_includes
    = stylesheet_link_tag 'active_scaffold_overrides'
    = yield(:head)
  %body
    #container
      
      - flash.each do |name, msg|
        %div(id="flash_#{name}")= msg
      
      - if show_title?
        %h1
          = yield(:title)
      #nav
        = link_to 'ダッシュボード', admin_root_path
        = link_to 'お知らせ', admin_notices_path
        = link_to 'コメント', admin_comments_path
        = link_to 'ユーザー', admin_users_path
        = link_to 'ペコフォト', admin_yums_path
      
      = yield
